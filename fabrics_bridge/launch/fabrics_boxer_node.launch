<?xml version="1.0" encoding="UTF-8"?>
<launch>
    <arg name="rviz" default="true"/>
    <rosparam
      command="load"
      file="$(find fabrics_bridge)/config/fabrics_boxer_tune_config.yaml"
    />
    <param
      name="robot_description_fabrics"
      command="xacro $(find fabrics_bridge)/config/boxer.urdf"
    />
    <group ns="fabrics">
        <!-- start fabric node -->
        <node
        pkg="fabrics_bridge"
        type="fabrics_node"
        name="fabrics_node"
        output="screen"
        />
    </group>
    <node
      pkg="rviz"
      type="rviz"
      name="rviz"
      args="-d $(find fabrics_bridge)/config/fabrics_boxer_visualization.rviz"
      if="$(arg rviz)"
    />
</launch>
